<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angkorteam.uicompose.master">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UIComposeMaster"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".HistoryActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.StateManagementActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.DisplayTextActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.DisplayStyledTextActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.VerticalScrollableListActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.HorizontalCarouselActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.LoadingImagesActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.ClickableComponentActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.PaginationActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
    </application>

</manifest>