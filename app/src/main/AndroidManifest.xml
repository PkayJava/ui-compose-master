<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angkorteam.uicompose.master">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UIComposeMaster">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DisplayTextActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
        <activity
            android:name=".activity.DisplayStyledTextActivity"
            android:theme="@style/Theme.UIComposeMaster.NoActionBar" />
    </application>

</manifest>